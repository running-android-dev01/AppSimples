<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryTextColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" >
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    
    
    <style name="Headline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Subhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Body1" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body2" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
    </style>





</resources>
