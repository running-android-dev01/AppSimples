<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtApto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtContrato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Contratos"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtReceber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="A Receber"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtRecebido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Recebido"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPercentRecebido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="% Recebido"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSituacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Situação"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        />

</LinearLayout>