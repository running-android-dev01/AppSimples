<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetalhesEmpreendimentoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDetalhe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="?attr/colorPrimaryDark"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtEmpreendimento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="txtEmpreendimento"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtEndereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="txtEndereco"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtEmpreendimento"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDetalhe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="?attr/colorPrimaryDark"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cardDetalhe1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtValorProjetadoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Valor m2 projetado:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtValorProjetado"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtValorProjetado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtValorProjetadoDesc"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPavimentosDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Pavimentos:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtPavimentos"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPavimentos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtPavimentosDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtValorProjetado"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidadesDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Unidades:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtUnidades"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidades"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtUnidadesDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtPavimentos"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAreaTotalTerrenoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Área total do terreno:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtAreaTotalTerreno"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAreaTotalTerreno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtAreaTotalTerrenoDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtUnidades"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtInicioDasObrasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Inicio das Obras:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtInicioDasObras"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtInicioDasObras"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtInicioDasObrasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtAreaTotalTerreno"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtFimDasObrasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Fim das Obras:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtFimDasObras"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtFimDasObras"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtFimDasObrasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtInicioDasObras"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtEntregaDeChavesDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Entrega das Chaves:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtEntregaDeChaves"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtEntregaDeChaves"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtEntregaDeChavesDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtFimDasObras"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDuracaoAteMomentoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Duração até o momento:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtDuracaoAteMomento"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDuracaoAteMomento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtDuracaoAteMomentoDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtEntregaDeChaves"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtFaltamATerminarDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Faltam para terminar:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtFaltamATerminar"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtFaltamATerminar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtFaltamATerminarDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtDuracaoAteMomento"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVendidasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Vendidas:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtVendidas"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVendidas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtVendidasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtFaltamATerminar"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDisponivelDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Disponíveis:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtDisponivel"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDisponivel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtDisponivelDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtVendidas"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAlugadasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Alugadas:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtAlugadas"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAlugadas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtAlugadasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtDisponivel"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtOutrasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Outras:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtOutras"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtOutras"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtOutrasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtAlugadas"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVgvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="VGV:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtVgv"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVgv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtVgvDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtOutras"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVendidoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Vendido:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtVendido"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVendido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtVendidoDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtVgv"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAVenderDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="A Vender:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtAVender"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAVender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtAVenderDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtVendido"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtRecebidoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Recebido:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtRecebido"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtRecebido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtRecebidoDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtAVender"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAReceberDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="A Receber:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtAReceber"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAReceber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtAReceberDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtRecebido"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>