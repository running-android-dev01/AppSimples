<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetalhesEmpreendimentoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDetalhe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="?attr/colorPrimaryDark"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtEmpreendimento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="txtEmpreendimento"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtEndereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="txtEndereco"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtEmpreendimento"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtValorProjetadoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/prompt_valor_projetado"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtValorProjetado"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtValorProjetado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtValorProjetadoDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtEndereco"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLancamentoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/prompt_lancamento"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtLancamento"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLancamento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtLancamentoDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtValorProjetado"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtInicioObrasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/prompt_inicio_obra"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtInicioObras"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtInicioObras"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtInicioObrasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtLancamento"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtFinalObrasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/prompt_final_obra"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtFinalObras"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtFinalObras"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtFinalObrasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtInicioObras"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDetalhe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="?attr/colorPrimaryDark"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cardDetalhe1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidadesDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Unidades:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtUnidades"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidades"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtUnidadesDesc"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidadesVendidasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Vendidas:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtUnidadesVendidas"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidadesVendidas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtUnidadesVendidasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtUnidades"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidadesDisponivelDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Disponíveis:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtUnidadesDisponivel"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidadesDisponivel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtUnidadesDisponivelDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtUnidadesVendidas"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidadesOutrasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Outras:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtUnidadesOutras"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtUnidadesOutras"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtUnidadesOutrasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtUnidadesDisponivel"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVgvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="VGV:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtVgv"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVgv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtVgvDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtUnidadesOutras"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVendasDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Vendas:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtVendas"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVendas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtVendasDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtVgv"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtRecebidosDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Recebido:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtRecebidos"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtRecebidos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtRecebidosDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtVendas"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVgvCustoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="VGV x Vendas:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtVgvCusto"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtVgvCusto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtVgvCustoDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtRecebidos"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCustoOrcamentoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Custos orçado:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtCustoOrcamento"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCustoOrcamento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtCustoOrcamentoDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtVgvCusto"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCustoIncorridoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Custos incorrido:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtCustoIncorrido"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCustoIncorrido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtCustoIncorridoDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtCustoOrcamento"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtResultadoAtualDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Resultado atual:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtResultadoAtual"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtResultadoAtual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtResultadoAtualDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtCustoIncorrido"
                    app:layout_constraintEnd_toEndOf="parent"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtSaldoDevedorDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Saldo devedor presente:"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtSaldoDevedor"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtSaldoDevedor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text=""
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/txtSaldoDevedorDesc"
                    app:layout_constraintTop_toBottomOf="@+id/txtResultadoAtual"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>